<div class="toolbar">
	<h1 id="pageTitle">
		Edit <%=@location.latitude%>
	</h1>
</div>

<form title="Edit Location" 
	  class="panel" 
	  id="location_edit_form" 
	  method="POST" 
	  action="<%=url_for(:action => :update)%>" selected="true">
	<fieldset>
		<input type="hidden" name="id" value="<%=@location.object%>"/>
		
                  <div class="row">
                          <label>Title: </label>
                          <input type="text" name="location[title]" value="<%=@location.title%>"/>
                  </div>

		  <div class="row">
			  <label>Latitude: </label>
			  <input type="text" name="location[latitude]" value="<%=@location.latitude%>"/>
		  </div>
		
		  <div class="row">
			  <label>Longitude: </label>
			  <input type="text" name="location[longitude]" value="<%=@location.longitude%>"/>
		  </div>
		
		  <div class="row">
			  <label>Street address: </label>
			  <input type="text" name="location[street_address]" value="<%=@location.street_address%>"/>
		  </div>
		
		  <div class="row">
			  <label>City: </label>
			  <input type="text" name="location[city]" value="<%=@location.city%>"/>
		  </div>
		
		  <div class="row">
			  <label>State: </label>
			  <input type="text" name="location[state]" value="<%=@location.state%>"/>
		  </div>
		
		  <div class="row">
			  <label>Zip code: </label>
			  <input type="text" name="location[zip_code]" value="<%=@location.zip_code%>"/>
		  </div>
		
	</fieldset>
	<input type="submit" value="Update"/>
	<p align="center">
		<a href="<%=url_for(:action => :delete, :id => @location.object)%>">
			<font color="#990000">Delete</font>
		</a>
	</p>
</form>
