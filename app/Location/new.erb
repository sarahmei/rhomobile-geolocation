<div class="toolbar">
  <h1 id="pageTitle">
    Current Location
  </h1>
</div>

<div class="panel" selected="true">

<table class="grid">
  
  <tr>
    <td class="gridleft">Latitude</td>
    <td class="gridright" id="latitude_td"><%= @location.latitude.to_s %></td>
  </tr>
  
  <tr>
    <td class="gridleft">Longitude</td>
    <td class="gridright" id="longitude_td"><%= @location.longitude.to_s %></td>
  </tr>

</table>

<% if System::get_property('platform') == 'APPLE' or System::get_property('platform') == 'Blackberry' %>
  <p align="center">
    <a class="whiteButton" href="show_map?latitude=<%= @location.latitude.to_s %>&longitude=<%= @location.longitude.to_s %>" target="_self">
      Map it!
    </a>
  </p>
<% end %>

</div>

